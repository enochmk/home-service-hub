{
  "name": "home-service-hub",
  "description": "Backend API to manage home services",
  "scripts": {
    "start": "node build/src/index.js",
    "dev": "nodemon src/index.ts",
    "build": "tsc -p .",
    "db:migration": "npx prisma migrate dev && npx prisma generate",
    "deploy": "git pull && npm run db:migration && docker compose up -d --build --force-recreate",
    "lint": "eslint --fix && prettier --write ."
  },
  "author": "Enoch Klufio",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^5.7.0",
    "axios": "^0.26.1",
    "bcrypt": "^5.1.1",
    "cls-rtracer": "^2.6.3",
    "config": "^3.3.7",
    "cors": "^2.8.5",
    "dayjs": "^1.11.11",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "express-async-errors": "^3.1.1",
    "helmet": "^5.0.2",
    "hpp": "^0.2.3",
    "http-errors": "^2.0.0",
    "http-status": "^1.7.3",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0",
    "uuid": "^8.3.2",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/config": "^0.0.41",
    "@types/cors": "^2.8.12",
    "@types/hpp": "^0.2.2",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/lodash": "^4.14.180",
    "@types/morgan": "^1.9.3",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^7.10.0",
    "@typescript-eslint/parser": "^7.10.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "lint-staged": "^15.2.4",
    "nodemon": "^2.0.22",
    "prettier": "^3.2.5",
    "prisma": "^5.7.0",
    "ts-node": "^10.5.0",
    "typescript": "^4.5.5"
  },
  "lint-staged": {
    "**/*.ts": [
      "prettier --write"
    ]
