{
  "compilerOptions": {
    "moduleResolution": "Node",
    "target": "es6",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "outDir": "build",
    "module": "CommonJS",
    "typeRoots": ["node_modules/@types", "./src/types"]
  },
  "include": ["src/**/*.ts", "config", "src/types/*.d.ts"],
  "exclude": ["node_modules"]
}
